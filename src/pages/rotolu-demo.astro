---
/**
 * rotulo-colors.astro
 *
 * Color variations for the three finalist rótulo styles
 * Style 1: Lobster script
 * Style 9: Chilanga script
 * Style 12: Two-line combo (Chilanga + Bebas Neue)
 */
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rótulo Color Variations</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Lobster&display=swap"
      rel="stylesheet"
    />

    <style>
      @font-face {
        font-family: 'Chilanga';
        src: url('/fonts/chilanga-regular.ttf') format('truetype');
        font-display: swap;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --bg-page: #f5f0e6;
        --bg-card: #ffffff;
        --text-primary: #1e293b;
        --text-muted: #64748b;
        --border: #e2e8f0;
      }

      .dark {
        --bg-page: #0a0a0a;
        --bg-card: #171717;
        --text-primary: #fafafa;
        --text-muted: #71717a;
        --border: #27272a;
      }

      body {
        min-height: 100vh;
        padding: 2rem 1rem;
        background: var(--bg-page);
        font-family: system-ui, sans-serif;
        color: var(--text-primary);
        transition:
          background-color 0.3s ease,
          color 0.3s ease;
      }

      .theme-toggle {
        position: fixed;
        top: 1rem;
        right: 1rem;
        padding: 0.5rem 1rem;
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: 8px;
        cursor: pointer;
        font-size: 0.875rem;
        color: var(--text-primary);
        z-index: 100;
      }

      .page-header {
        text-align: center;
        margin-bottom: 2rem;
      }

      .page-header h1 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
      }

      .page-header p {
        color: var(--text-muted);
      }

      /* Section Headers */
      .style-section {
        max-width: 1400px;
        margin: 0 auto 3rem;
      }

      .section-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid var(--border);
      }

      .section-header h2 {
        font-size: 1.1rem;
        font-weight: 600;
      }

      .section-header span {
        font-size: 0.8rem;
        color: var(--text-muted);
      }

      /* Demo Grid */
      .demo-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .demo-card {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
      }

      .demo-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
      }

      .demo-display {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 160px;
        padding: 1.5rem 1rem;
      }

      .demo-label {
        padding: 0.75rem 1rem;
        border-top: 1px solid var(--border);
        font-size: 0.75rem;
        color: var(--text-muted);
        text-align: center;
      }

      /* ===========================================
       BASE STYLES
       =========================================== */
      .rotulo {
        font-size: clamp(2.5rem, 10vw, 4.5rem);
        background-size: 100%;
        background-repeat: repeat;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1.1;
      }

      .rotulo-lobster {
        font-family: 'Lobster', cursive;
      }

      .rotulo-chilanga {
        font-family: 'Chilanga', cursive;
      }

      /* Two-line base */
      .two-line {
        text-align: center;
      }

      .two-line-top {
        font-family: 'Chilanga', cursive;
        font-size: clamp(1.5rem, 5vw, 2.5rem);
        background-size: 100%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
        display: block;
        margin-bottom: -0.15em;
      }

      .two-line-bottom {
        font-family: 'Bebas Neue', sans-serif;
        font-size: clamp(2rem, 8vw, 3.5rem);
        background-size: 100%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
        display: block;
      }

      /* ===========================================
       STYLE 1 (LOBSTER) - COLOR VARIATIONS
       =========================================== */

      /* 1A: Original */
      .bg-1a {
        background: linear-gradient(180deg, #87ceeb 0%, #b8e0f0 100%);
      }
      .style-1a {
        background-image: linear-gradient(0deg, #dc2626, #fbbf24);
        -webkit-text-stroke: 0.12rem #1e293b;
        filter: drop-shadow(0.3rem 0.3rem 0 #0ea5e9);
      }

      /* 1B: Warm Terracotta */
      .bg-1b {
        background: linear-gradient(180deg, #fef3c7 0%, #fde68a 100%);
      }
      .style-1b {
        background-image: linear-gradient(0deg, #b91c1c, #f97316);
        -webkit-text-stroke: 0.12rem #451a03;
        filter: drop-shadow(0.3rem 0.3rem 0 #1e3a8a);
      }

      /* 1C: Forest */
      .bg-1c {
        background: linear-gradient(180deg, #ecfdf5 0%, #d1fae5 100%);
      }
      .style-1c {
        background-image: linear-gradient(0deg, #15803d, #86efac);
        -webkit-text-stroke: 0.12rem #14532d;
        filter: drop-shadow(0.3rem 0.3rem 0 #b91c1c);
      }

      /* 1D: Sunset Purple */
      .bg-1d {
        background: linear-gradient(180deg, #fdf4ff 0%, #f5d0fe 100%);
      }
      .style-1d {
        background-image: linear-gradient(0deg, #9333ea, #f0abfc);
        -webkit-text-stroke: 0.12rem #581c87;
        filter: drop-shadow(0.3rem 0.3rem 0 #ea580c);
      }

      /* 1E: Ocean Deep */
      .bg-1e {
        background: linear-gradient(180deg, #0c4a6e 0%, #075985 100%);
      }
      .style-1e {
        background-image: linear-gradient(0deg, #0891b2, #a5f3fc);
        -webkit-text-stroke: 0.12rem #164e63;
        filter: drop-shadow(0.3rem 0.3rem 0 #fbbf24);
      }

      /* 1F: Hot Pink */
      .bg-1f {
        background: linear-gradient(180deg, #18181b 0%, #27272a 100%);
      }
      .style-1f {
        background-image: linear-gradient(0deg, #db2777, #fbcfe8);
        -webkit-text-stroke: 0.12rem #831843;
        filter: drop-shadow(0.3rem 0.3rem 0 #06b6d4);
      }

      /* 1G: Cream/Red/Yellow (Rótulo Tradicional) */
      .bg-1g {
        background: #faedc9;
      }
      .style-1g {
        background-image: linear-gradient(0deg, #a31515, #dc2626);
        -webkit-text-stroke: 0.08rem #4a1c1c;
        filter: drop-shadow(0.25rem 0.25rem 0 #f7b32b);
      }

      /* ===========================================
       STYLE 9 (CHILANGA) - COLOR VARIATIONS
       =========================================== */

      /* 9A: Classic Red/Yellow */
      .bg-9a {
        background: linear-gradient(180deg, #eff6ff 0%, #dbeafe 100%);
      }
      .style-9a {
        background-image: linear-gradient(0deg, #b91c1c, #fbbf24);
        -webkit-text-stroke: 0.06rem #1e293b;
        filter: drop-shadow(0.25rem 0.25rem 0 #1e40af);
      }

      /* 9B: Earthy */
      .bg-9b {
        background: linear-gradient(180deg, #fef3c7 0%, #fde68a 100%);
      }
      .style-9b {
        background-image: linear-gradient(0deg, #92400e, #fbbf24);
        -webkit-text-stroke: 0.06rem #451a03;
        filter: drop-shadow(0.25rem 0.25rem 0 #166534);
      }

      /* 9C: Cool Blue */
      .bg-9c {
        background: linear-gradient(180deg, #fefce8 0%, #fef9c3 100%);
      }
      .style-9c {
        background-image: linear-gradient(0deg, #1d4ed8, #60a5fa);
        -webkit-text-stroke: 0.06rem #1e3a8a;
        filter: drop-shadow(0.25rem 0.25rem 0 #dc2626);
      }

      /* 9D: Teal/Coral */
      .bg-9d {
        background: linear-gradient(180deg, #f0fdfa 0%, #ccfbf1 100%);
      }
      .style-9d {
        background-image: linear-gradient(0deg, #0d9488, #5eead4);
        -webkit-text-stroke: 0.06rem #134e4a;
        filter: drop-shadow(0.25rem 0.25rem 0 #e11d48);
      }

      /* 9E: Burgundy/Gold */
      .bg-9e {
        background: linear-gradient(180deg, #1c1917 0%, #292524 100%);
      }
      .style-9e {
        background-image: linear-gradient(0deg, #991b1b, #fcd34d);
        -webkit-text-stroke: 0.06rem #fef3c7;
        filter: drop-shadow(0.25rem 0.25rem 0 #1e40af);
      }

      /* 9F: Mango */
      .bg-9f {
        background: linear-gradient(180deg, #fff7ed 0%, #ffedd5 100%);
      }
      .style-9f {
        background-image: linear-gradient(0deg, #ea580c, #fde047);
        -webkit-text-stroke: 0.06rem #7c2d12;
        filter: drop-shadow(0.25rem 0.25rem 0 #7c3aed);
      }

      /* 9G: Cream/Red/Yellow (Rótulo Tradicional) */
      .bg-9g {
        background: #faedc9;
      }
      .style-9g {
        background-image: linear-gradient(0deg, #a31515, #dc2626);
        -webkit-text-stroke: 0.05rem #4a1c1c;
        filter: drop-shadow(0.2rem 0.2rem 0 #f7b32b);
      }

      /* ===========================================
       STYLE 12 (TWO-LINE) - COLOR VARIATIONS
       =========================================== */

      /* 12A: Classic */
      .bg-12a {
        background: linear-gradient(180deg, #fefce8 0%, #fef9c3 100%);
      }
      .style-12a-top {
        background-image: linear-gradient(0deg, #b91c1c, #ef4444);
        -webkit-text-stroke: 0.04rem #1e293b;
        filter: drop-shadow(0.15rem 0.15rem 0 #1e40af);
      }
      .style-12a-bottom {
        background-image: linear-gradient(0deg, #1e40af, #3b82f6);
        -webkit-text-stroke: 0.05rem #1e293b;
        filter: drop-shadow(0.12rem 0.12rem 0 #fbbf24) drop-shadow(0.24rem 0.24rem 0 #b91c1c);
      }

      /* 12B: All Warm */
      .bg-12b {
        background: linear-gradient(180deg, #eff6ff 0%, #dbeafe 100%);
      }
      .style-12b-top {
        background-image: linear-gradient(0deg, #c2410c, #fb923c);
        -webkit-text-stroke: 0.04rem #7c2d12;
        filter: drop-shadow(0.15rem 0.15rem 0 #1e3a8a);
      }
      .style-12b-bottom {
        background-image: linear-gradient(0deg, #b91c1c, #fbbf24);
        -webkit-text-stroke: 0.05rem #1e293b;
        filter: drop-shadow(0.12rem 0.12rem 0 #1e40af) drop-shadow(0.24rem 0.24rem 0 #172554);
      }

      /* 12C: Inverted */
      .bg-12c {
        background: linear-gradient(180deg, #fef2f2 0%, #fecaca 100%);
      }
      .style-12c-top {
        background-image: linear-gradient(0deg, #1e40af, #60a5fa);
        -webkit-text-stroke: 0.04rem #1e3a8a;
        filter: drop-shadow(0.15rem 0.15rem 0 #dc2626);
      }
      .style-12c-bottom {
        background-image: linear-gradient(0deg, #b91c1c, #f87171);
        -webkit-text-stroke: 0.05rem #1e293b;
        filter: drop-shadow(0.12rem 0.12rem 0 #fbbf24) drop-shadow(0.24rem 0.24rem 0 #1e40af);
      }

      /* 12D: Dark Mode Hero */
      .bg-12d {
        background: linear-gradient(180deg, #18181b 0%, #27272a 100%);
      }
      .style-12d-top {
        background-image: linear-gradient(0deg, #dc2626, #fbbf24);
        -webkit-text-stroke: 0.04rem #fef3c7;
        filter: drop-shadow(0.15rem 0.15rem 0 #0ea5e9);
      }
      .style-12d-bottom {
        background-image: linear-gradient(0deg, #0ea5e9, #7dd3fc);
        -webkit-text-stroke: 0.05rem #0c4a6e;
        filter: drop-shadow(0.12rem 0.12rem 0 #fbbf24) drop-shadow(0.24rem 0.24rem 0 #dc2626);
      }

      /* 12E: Earthy Tones */
      .bg-12e {
        background: linear-gradient(180deg, #ecfdf5 0%, #d1fae5 100%);
      }
      .style-12e-top {
        background-image: linear-gradient(0deg, #92400e, #f59e0b);
        -webkit-text-stroke: 0.04rem #451a03;
        filter: drop-shadow(0.15rem 0.15rem 0 #166534);
      }
      .style-12e-bottom {
        background-image: linear-gradient(0deg, #166534, #4ade80);
        -webkit-text-stroke: 0.05rem #14532d;
        filter: drop-shadow(0.12rem 0.12rem 0 #fbbf24) drop-shadow(0.24rem 0.24rem 0 #92400e);
      }

      /* 12F: Fiesta */
      .bg-12f {
        background: linear-gradient(180deg, #fdf4ff 0%, #fae8ff 100%);
      }
      .style-12f-top {
        background-image: linear-gradient(0deg, #db2777, #f9a8d4);
        -webkit-text-stroke: 0.04rem #831843;
        filter: drop-shadow(0.15rem 0.15rem 0 #0d9488);
      }
      .style-12f-bottom {
        background-image: linear-gradient(0deg, #7c3aed, #c4b5fd);
        -webkit-text-stroke: 0.05rem #4c1d95;
        filter: drop-shadow(0.12rem 0.12rem 0 #fbbf24) drop-shadow(0.24rem 0.24rem 0 #db2777);
      }

      /* 12G: Cream/Red/Yellow (Rótulo Tradicional) */
      .bg-12g {
        background: #faedc9;
      }
      .style-12g-top {
        background-image: linear-gradient(0deg, #a31515, #dc2626);
        -webkit-text-stroke: 0.04rem #4a1c1c;
        filter: drop-shadow(0.15rem 0.15rem 0 #f7b32b);
      }
      .style-12g-bottom {
        background-image: linear-gradient(0deg, #9a1515, #c41e1e);
        -webkit-text-stroke: 0.05rem #4a1c1c;
        filter: drop-shadow(0.2rem 0.2rem 0 #f7b32b);
      }
    </style>
  </head>
  <body>
    <button class="theme-toggle" id="theme-toggle">Toggle Theme</button>

    <header class="page-header">
      <h1>Color Variations</h1>
      <p>Styles 1, 9, and 12 in different color palettes</p>
    </header>

    <!-- STYLE 1: LOBSTER -->
    <section class="style-section">
      <div class="section-header">
        <h2>Style 1: Lobster Script</h2>
        <span>Single word, flowing script</span>
      </div>
      <div class="demo-grid">
        <div class="demo-card">
          <div class="demo-display bg-1a">
            <span class="rotulo rotulo-lobster style-1a">Tortas</span>
          </div>
          <div class="demo-label">1A: Original (Sky Blue)</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-1b">
            <span class="rotulo rotulo-lobster style-1b">Tortas</span>
          </div>
          <div class="demo-label">1B: Warm Terracotta</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-1c">
            <span class="rotulo rotulo-lobster style-1c">Tortas</span>
          </div>
          <div class="demo-label">1C: Forest Green</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-1d">
            <span class="rotulo rotulo-lobster style-1d">Tortas</span>
          </div>
          <div class="demo-label">1D: Sunset Purple</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-1e">
            <span class="rotulo rotulo-lobster style-1e">Tortas</span>
          </div>
          <div class="demo-label">1E: Ocean Deep</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-1f">
            <span class="rotulo rotulo-lobster style-1f">Tortas</span>
          </div>
          <div class="demo-label">1F: Hot Pink (Dark)</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-1g">
            <span class="rotulo rotulo-lobster style-1g">Tortas</span>
          </div>
          <div class="demo-label">1G: Rótulo Tradicional ⭐</div>
        </div>
      </div>
    </section>

    <!-- STYLE 9: CHILANGA -->
    <section class="style-section">
      <div class="section-header">
        <h2>Style 9: Chilanga Script</h2>
        <span>Your display font with the gradient technique</span>
      </div>
      <div class="demo-grid">
        <div class="demo-card">
          <div class="demo-display bg-9a">
            <span class="rotulo rotulo-chilanga style-9a">Hola</span>
          </div>
          <div class="demo-label">9A: Classic Red/Yellow</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-9b">
            <span class="rotulo rotulo-chilanga style-9b">Hola</span>
          </div>
          <div class="demo-label">9B: Earthy Gold</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-9c">
            <span class="rotulo rotulo-chilanga style-9c">Hola</span>
          </div>
          <div class="demo-label">9C: Cool Blue</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-9d">
            <span class="rotulo rotulo-chilanga style-9d">Hola</span>
          </div>
          <div class="demo-label">9D: Teal/Coral</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-9e">
            <span class="rotulo rotulo-chilanga style-9e">Hola</span>
          </div>
          <div class="demo-label">9E: Burgundy/Gold (Dark)</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-9f">
            <span class="rotulo rotulo-chilanga style-9f">Hola</span>
          </div>
          <div class="demo-label">9F: Mango</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-9g">
            <span class="rotulo rotulo-chilanga style-9g">Hola</span>
          </div>
          <div class="demo-label">9G: Rótulo Tradicional ⭐</div>
        </div>
      </div>
    </section>

    <!-- STYLE 12: TWO-LINE -->
    <section class="style-section">
      <div class="section-header">
        <h2>Style 12: Two-Line Combo</h2>
        <span>Chilanga + Bebas Neue for the full title</span>
      </div>
      <div class="demo-grid">
        <div class="demo-card">
          <div class="demo-display bg-12a">
            <div class="two-line">
              <span class="two-line-top style-12a-top">A Course in</span>
              <span class="two-line-bottom style-12a-bottom">MEXICAN SPANISH</span>
            </div>
          </div>
          <div class="demo-label">12A: Classic (Red + Blue)</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-12b">
            <div class="two-line">
              <span class="two-line-top style-12b-top">A Course in</span>
              <span class="two-line-bottom style-12b-bottom">MEXICAN SPANISH</span>
            </div>
          </div>
          <div class="demo-label">12B: All Warm</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-12c">
            <div class="two-line">
              <span class="two-line-top style-12c-top">A Course in</span>
              <span class="two-line-bottom style-12c-bottom">MEXICAN SPANISH</span>
            </div>
          </div>
          <div class="demo-label">12C: Inverted</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-12d">
            <div class="two-line">
              <span class="two-line-top style-12d-top">A Course in</span>
              <span class="two-line-bottom style-12d-bottom">MEXICAN SPANISH</span>
            </div>
          </div>
          <div class="demo-label">12D: Dark Mode Hero</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-12e">
            <div class="two-line">
              <span class="two-line-top style-12e-top">A Course in</span>
              <span class="two-line-bottom style-12e-bottom">MEXICAN SPANISH</span>
            </div>
          </div>
          <div class="demo-label">12E: Earthy Tones</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-12f">
            <div class="two-line">
              <span class="two-line-top style-12f-top">A Course in</span>
              <span class="two-line-bottom style-12f-bottom">MEXICAN SPANISH</span>
            </div>
          </div>
          <div class="demo-label">12F: Fiesta</div>
        </div>
        <div class="demo-card">
          <div class="demo-display bg-12g">
            <div class="two-line">
              <span class="two-line-top style-12g-top">A Course in</span>
              <span class="two-line-bottom style-12g-bottom">MEXICAN SPANISH</span>
            </div>
          </div>
          <div class="demo-label">12G: Rótulo Tradicional ⭐</div>
        </div>
      </div>
    </section>

    <script>
      const toggle = document.getElementById('theme-toggle');
      const html = document.documentElement;

      const savedTheme = localStorage.getItem('theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

      if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
        html.classList.add('dark');
      }

      toggle.addEventListener('click', () => {
        html.classList.toggle('dark');
        localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
      });
    </script>
  </body>
</html>
