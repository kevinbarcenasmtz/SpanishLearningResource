---
/**
 * Header.astro
 *
 * Global header with:
 * - Mobile (<640px): hamburger menu (left) + ToC toggle (right)
 * - Tablet (640-1024px): sidebar toggle (left) + ToC toggle (right)
 * - Desktop (>1024px): sidebar toggle (left) + logo (center)
 */

interface Props {
  siteTitle?: string;
}

const { siteTitle = 'A Course in Mexican Spanish' } = Astro.props;
---

<header class="app-header">
  <div class="header-container">
    <div class="header-left">
      <button
        type="button"
        id="mobile-menu-toggle"
        class="header-button mobile-only"
        aria-label="Open navigation menu"
        aria-expanded="false"
        aria-controls="left-drawer"
      >
        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <!-- Sidebar Toggle (for tablet/desktop) - visible >= 640px -->
      <button
        type="button"
        id="sidebar-toggle"
        class="header-button tablet-desktop-only"
        aria-label="Toggle sidebar"
        aria-expanded="true"
        aria-controls="left-sidebar"
      >
        <svg class="icon sidebar-icon-open" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
        </svg>
        <svg class="icon sidebar-icon-closed" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>

    <a href="/" class="header-logo">
      <!-- Full title (tablet+) -->
      <img
        src="/images/rotulo-header-desktop-light.svg"
        alt="A Course in Mexican Spanish"
        class="logo-img tablet-desktop-only"
        width="600"
        height="80"
      />
      <!-- Short title (mobile) -->
      <img
        src="/images/rotulo-header-mobile-light.svg"
        alt="Mexican Spanish"
        class="logo-img-short mobile-only"
        width="300"
        height="50"
      />
    </a>

    <!-- Right Side: ToC Toggle -->
    <div class="header-right">
      <button
        type="button"
        id="mobile-toc-toggle"
        class="header-button mobile-tablet-only"
        aria-label="Open table of contents"
        aria-expanded="false"
        aria-controls="right-drawer"
      >
        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 10h16M4 14h10M4 18h7"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<style>
  /* Logo images - set sizes and swap content for dark mode */
  .logo-img {
    height: 66px;
    width: auto;
    content: url('/images/rotulo-header-desktop-light.svg');
  }

  .logo-img-short {
    height: 40px;
    width: auto;
    content: url('/images/rotulo-header-mobile-light.svg');
  }

  /* Dark mode - swap to dark versions */
  :global(.dark) .logo-img {
    content: url('/images/rotulo-header-desktop-dark.svg');
  }

  :global(.dark) .logo-img-short {
    content: url('/images/rotulo-header-mobile-dark.svg');
  }
  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    padding: 0 1rem;
  }

  .header-left,
  .header-right {
    display: flex;
    align-items: center;
    min-width: 2.5rem;
  }

  .header-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    background-color: transparent;
    border: none;
    cursor: pointer;
    color: var(--color-text-secondary);
    transition:
      background-color var(--transition-fast),
      color var(--transition-fast);
  }

  .header-button:hover {
    background-color: var(--color-bg-tertiary);
    color: var(--color-text-primary);
  }

  .icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Logo */
  .header-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .header-logo:hover {
    text-decoration: none;
  }

  /* Logo text - Rótulo styling */
  .logo-text,
  .logo-text-short {
    font-family: var(--font-display);
    /* Light mode - Red→Coral gradient with orange stroke and golden shadow */
    background-image: linear-gradient(0deg, #c50300, #fc8568);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    -webkit-text-stroke: 0.025rem #e85a0e;
    filter: drop-shadow(-0.11rem 0.11rem 0 #ffd500);
  }

  .logo-text {
    font-size: 3rem;
  }

  .logo-text-short {
    font-size: 1.125rem;
  }

  /* Dark mode - Red→Yellow gradient with cream stroke and cyan shadow */
  :global(.dark) .logo-text,
  :global(.dark) .logo-text-short {
    background-image: linear-gradient(0deg, #ff1101, #ffea07);
    -webkit-text-stroke: 0.03rem #f7efd1;
    filter: drop-shadow(-0.1rem 0.1rem 0 #0c90cd);
  }

  .sidebar-icon-closed {
    display: none;
  }

  :global(body.sidebar-collapsed) .sidebar-icon-open {
    display: none;
  }

  :global(body.sidebar-collapsed) .sidebar-icon-closed {
    display: block;
  }

  /* ===========================================
     Responsive visibility classes
     =========================================== */

  /* Mobile only: < 640px */
  .mobile-only {
    display: flex;
  }

  @media (min-width: 640px) {
    .mobile-only {
      display: none;
    }
  }

  /* Tablet and desktop: >= 640px */
  .tablet-desktop-only {
    display: none;
  }

  @media (min-width: 640px) {
    .tablet-desktop-only {
      display: flex;
    }
  }

  /* Mobile and tablet: < 1024px */
  .mobile-tablet-only {
    display: flex;
  }

  @media (min-width: 1024px) {
    .mobile-tablet-only {
      display: none;
    }
  }

  /* Desktop only: >= 1024px */
  .desktop-only {
    display: none;
  }

  @media (min-width: 1024px) {
    .desktop-only {
      display: flex;
    }
  }
</style>
