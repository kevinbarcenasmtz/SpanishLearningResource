---
/**
 * Header.astro
 *
 * Global header with:
 * - Mobile (<640px): hamburger menu (left) + ToC toggle (right)
 * - Tablet (640-1024px): sidebar toggle (left) + ToC toggle (right)
 * - Desktop (>1024px): sidebar toggle (left) + logo (center)
 *
 * Logo uses rótulo styling in both light and dark modes
 */

interface Props {
  siteTitle?: string;
}

const { siteTitle = 'A Course in Mexican Spanish' } = Astro.props;
---

<header class="app-header">
  <div class="header-container">
    <div class="header-left">
      <button
        type="button"
        id="mobile-menu-toggle"
        class="header-button mobile-only"
        aria-label="Open navigation menu"
        aria-expanded="false"
        aria-controls="left-drawer"
      >
        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <!-- Sidebar Toggle (for tablet/desktop) - visible >= 640px -->
      <button
        type="button"
        id="sidebar-toggle"
        class="header-button tablet-desktop-only"
        aria-label="Toggle sidebar"
        aria-expanded="true"
        aria-controls="left-sidebar"
      >
        <svg class="icon sidebar-icon-open" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
        </svg>
        <svg class="icon sidebar-icon-closed" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>

    <a href="/" class="header-logo">
      <!-- Full title (tablet+) - Rótulo style in both modes -->
      <div class="logo-text-wrapper tablet-desktop-only">
        <span class="logo-text">{siteTitle}</span>
      </div>
      <!-- Short title (mobile) - Rótulo style -->
      <span class="logo-text-short mobile-only">Mexican Spanish</span>
    </a>

    <!-- Right Side: ToC Toggle -->
    <div class="header-right">
      <button
        type="button"
        id="mobile-toc-toggle"
        class="header-button mobile-tablet-only"
        aria-label="Open table of contents"
        aria-expanded="false"
        aria-controls="right-drawer"
      >
        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 10h16M4 14h10M4 18h7"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<style>
  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    padding: 0 1rem;
  }

  .header-left,
  .header-right {
    display: flex;
    align-items: center;
    min-width: 2.5rem;
  }

  .header-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    background-color: transparent;
    border: none;
    cursor: pointer;
    color: var(--color-text-secondary);
    transition:
      background-color var(--transition-fast),
      color var(--transition-fast);
  }

  .header-button:hover {
    background-color: var(--color-bg-tertiary);
    color: var(--color-text-primary);
  }

  .icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Logo */
  .header-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .header-logo:hover {
    text-decoration: none;
  }

  .logo-text-wrapper {
    display: flex;
    align-items: center;
  }

  /* Rótulo-style logo text */
  .logo-text,
  .logo-text-short {
    font-family: var(--font-display);
    line-height: 1.1;
    /* Light mode: Red text with yellow shadow going down-left */
    background-image: linear-gradient(0deg, #c50300, #ea0400);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    -webkit-text-stroke: 0.02rem #8b0000;
    filter: drop-shadow(-0.1rem 0.1rem 0 #f8d103);
  }

  .logo-text {
    font-size: 2.5rem;
  }

  .logo-text-short {
    font-size: 1.125rem;
  }

  /* Dark mode: Red→Yellow gradient with cream stroke and cyan shadow (bottom-left) */
  :global(.dark) .logo-text,
  :global(.dark) .logo-text-short {
    background-image: linear-gradient(0deg, #ff1101, #ffea07);
    -webkit-text-stroke: 0.03rem #f7efd1;
    filter: drop-shadow(-0.1rem 0.1rem 0 #0c90cd);
  }

  .sidebar-icon-closed {
    display: none;
  }

  :global(body.sidebar-collapsed) .sidebar-icon-open {
    display: none;
  }

  :global(body.sidebar-collapsed) .sidebar-icon-closed {
    display: block;
  }

  /* ===========================================
     Responsive visibility classes
     =========================================== */

  /* Mobile only: < 640px */
  .mobile-only {
    display: flex;
  }

  @media (min-width: 640px) {
    .mobile-only {
      display: none;
    }
  }

  /* Tablet and desktop: >= 640px */
  .tablet-desktop-only {
    display: none;
  }

  @media (min-width: 640px) {
    .tablet-desktop-only {
      display: flex;
    }
  }

  /* Mobile and tablet: < 1024px */
  .mobile-tablet-only {
    display: flex;
  }

  @media (min-width: 1024px) {
    .mobile-tablet-only {
      display: none;
    }
  }

  /* Desktop only: >= 1024px */
  .desktop-only {
    display: none;
  }

  @media (min-width: 1024px) {
    .desktop-only {
      display: flex;
    }
  }
</style>
