---
/**
 * Header.astro
 */
 interface Props {
  siteTitle?: string;
}
const { siteTitle = 'A Course in Mexican Spanish' } = Astro.props;
---

<header class="app-header">
  <div class="flex h-full items-center justify-between px-4">
    <!-- Mobile Menu Toggle (Left) -->
    <button
      type="button"
      id="mobile-menu-toggle"
      class="lg:hidden theme-toggle"
      aria-label="Open navigation menu"
      aria-expanded="false"
      aria-controls="left-drawer"
    >
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Logo/Brand -->
    <a href="/" class="flex items-center gap-3 no-underline group">
      <!-- Icon badge -->
      <span class="flex h-9 w-9 items-center justify-center rounded-lg bg-[#c41e1e] text-[#f7b32b] font-display text-lg font-bold">
        MX
      </span>
      <!-- Full title (desktop) -->
      <span class="font-display text-xl hidden sm:inline rotulo-text-sm">
        {siteTitle}
      </span>
      <!-- Short title (mobile) -->
      <span class="font-display text-lg sm:hidden rotulo-text-sm">
        Mexican Spanish
      </span>
    </a>

    <!-- Mobile ToC Toggle (Right) -->
    <button
      type="button"
      id="mobile-toc-toggle"
      class="lg:hidden theme-toggle"
      aria-label="Open table of contents"
      aria-expanded="false"
      aria-controls="right-drawer"
    >
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 10h16M4 14h10M4 18h7"></path>
      </svg>
    </button>
  </div>
</header>